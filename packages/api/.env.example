# 环境变量配置示例
# 复制此文件为 .env.development 或 .env.production 并修改相应的值

# 项目模式 (development/production)
NODE_ENV=development

# 应用名称
APP_NAME=Bunfly API

# 加密盐 (用于密码加密等)
MD5_SALT=your-random-salt-here

# 监听端口
APP_PORT=3000

# 监听主机 (开发环境: localhost, 生产环境: 0.0.0.0)
LISTEN_HOST=localhost

# 超级管理员密码
DEV_PASSWORD=your-admin-password

# 请求体大小限制 (字节，10M = 10485760)
BODY_LIMIT=10485760

# 是否进行参数验证 (true/false)
PARAMS_CHECK=true

# 日志等级 (debug/info/warn/error)
LOG_LEVEL=debug

# 数据库表主键方案 (auto_increment/uuid)
TABLE_PRIMARY_KEY=auto_increment

# 时区
TIMEZONE=Asia/Shanghai

# MySQL 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=bunfly
MYSQL_USERNAME=root
MYSQL_PASSWORD=password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=bunfly:

# JWT 配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256

# 邮件配置
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_POOL=true
MAIL_SECURE=false
MAIL_USER=your-email@domain.com
MAIL_PASS=your-email-password
MAIL_SENDER=Your App Name
MAIL_ADDRESS=your-email@domain.com

# 文件上传配置
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=10485760

# CORS 配置
CORS_ORIGIN=*
